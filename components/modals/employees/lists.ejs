<div class="modal modal-xl fade" id="addModalEmployee" tabindex="-1" aria-labelledby="addModalEmployeeLabel" aria-hidden="true">
    <div class="modal-dialog">
        <div class="modal-content">
        <div class="modal-header">
            <h1 class="modal-title fs-5" id="addModalEmployeeLabel">Employee Details</h1>
            <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
        </div>
        <div class="modal-body">
          <div class="form-group">
            <table
              id="justTables"
              class="display table table-striped table-hover"
            >
              <thead>
                <tr>
                  <th>Employee Id</th>
                  <th>First Name</th>
                  <th>Middle Name</th>
                  <th>Last Name</th>
                  <th>Ext Name</th>
                </tr>
              </thead>
              <tbody>
              <% employees.forEach(employee => { 
                const { employeeid, firstname, middlename, lastname, extname } = employee
              %>
                <tr data-employee="<%=JSON.stringify(employee)%>">
                  <td>
                    <div class="form-check">
                      <input class="form-check-input" type="checkbox" value="<%=[firstname, middlename, lastname].join(' ')%>" id="<%=employeeid%>">
                      <label class="form-check-label" for="<%=employeeid%>"><%=employeeid%></label>
                    </div>
                  </td>
                  <td><%=firstname||'First Name'%></td>
                  <td><%=middlename||'Middle Name'%></td>
                  <td><%=lastname||'Last Name'%></td>
                  <td><%=extname||''%></td>
                </tr>
              <% }) %>
              </tbody>
            </table>
            </div>
          </div>
        </div>
      </div>
    </div>
  </div>