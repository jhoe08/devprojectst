                   <% if(['Admin', 'SuperAdmin'].includes(currentRole)){ %>
                  <a id="approveBtn" href="#" class="btn btn-success btn-round"><i class="fas fa-check"></i> Approve</a>
                  <a id="disapproveBtn" href="#" class="btn btn-danger btn-round"><i class="fas fa-times"></i> Disapprove</a>
                  <% } %>
              </div>
