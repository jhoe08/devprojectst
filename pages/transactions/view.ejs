<!-- Header Template -->
<%- include('../../views/header') -%>
<% 
  const { peso } = UTILS
  let sessionUserPosition = ''
  const { employeeid, roles } = SESSION_USER

  if (SESSION_USER_LOG) {
    const { designation, division } = SESSION_USER_LOG
    sessionUserPosition = designation.position
    sessionUserPosition = sessionUserPosition.toLowerCase()
  }
  if (transactions) {
    const { product_id, pr_date, prepared_by } = transactions
    const requestID = UTILS.addLeadingZeros(product_id)
    const trackerid = `PR${moment(pr_date).format('YYYYMMDD')}-${requestID}`

    const { lists, getCurrentStep, getDetails, getTitle } = STEPS

    let current_step = getCurrentStep(steps, product_id)
    current_step_number = current_step?.steps_number
    current_step_title = getTitle(current_step_number)

    const currentHolder = getCurrentHolderOfTransaction(transactions.product_id)
    let userDetailsExp, employeesInSameDivision = {}
    if(currentHolder){
      userDetailsExp = getEmployeedDetailsById(currentHolder)
      let raw = getEmployeesInSameDivision(currentHolder);

      try {
        employeesInSameDivision = raw ? JSON.parse(raw) : {};
      } catch (err) {
        console.error("Failed to parse JSON:", err);
        employeesInSameDivision = {};
      }
    }

    preparedby = prepared_by ? JSON.parse(prepared_by) : {}
    preparedbyname = preparedby?.name || ''
    preparedbyid = preparedby?.employeeid || ''
%>
    
  %>
<div class="wrapper" data-product-id="<%= transactions.product_id %>">
    <%- include('../../views/sidebar') -%>

    <div class="main-panel">
      <%- include('../../views/main-header') -%>
      
      <div class="container" data-transaction-id="<%- transactions.product_id -%>">
          <div class="page-inner">
            <div class="page-header d-flex align-items-left align-items-md-center flex-column flex-md-row pt-2 pb-4">
              <div class="col-md-1 mr-4">
                <div id="transid-<%- trackerid -%>" data-qrcode="<%- trackerid -%>" class="qrcode" data-bs-toggle="tooltip" data-bs-placement="top" data-bs-title="<%- trackerid -%>"></div>
              </div>
              <div class="col-md-6" data-current-steps="<%= steps %>">
                  <h3 class="fw-bold mb-3"><%- transactions.bid_notice_title -%></h3>
                  <h6 class="text-muted hidden">System Generated Code: <small id="trackingCode"><%= trackerid %></small></h6>
                  <h6 class="text-muted">Prepared by: <a href="/employees/<%= preparedbyid %>/profile"><%= preparedbyname %></a></h6>
                  <%- include('../../views/partials/progress', {length: 30, progress: steps[0]?.steps_number || 1, title: steps[0]?.steps_title }) -%>
              </div>
              <div class="ms-md-auto py-2 py-md-0" data-current-step="<%= JSON.stringify(current_step) %>">
                  <a href="/transactions/<%- transactions.product_id -%>/print" class="btn btn-label-info btn-round me-2" id="btnPrint"><i class="fas fa-print"></i> Print</a>
                  <% if (canUpdateTransaction(SESSION_USER, current_step) || isSuperAdmin()) { %>
                  <a href="#" class="btn btn-primary btn-round" data-bs-toggle="modal" data-bs-target="#remarksModal"><i class="fas fa-plus"></i> Add Remarks</a>
                  <button data-product-id="<%= transactions.product_id %>" href="#" class="alert_confirm btn btn-success btn-round" data-step="<%= current_step_number %>"><i class="fas fa-check"></i> Approve</button>
                  <a data-product-id="<%= transactions.product_id %>" id="disapproveBtn" href="#" class="alert_deny btn btn-danger btn-round" data-step="<%= current_step_number %>"><i class="fas fa-times"></i> Disapprove</a>
                  <% } else if (current_step == null && isCreatorOfTransaction(transactions)) { %>
                  <a href="#" class="alert_confirm btn btn-success btn-round" data-product-id="<%= transactions.product_id %>" data-step="1">Publish</a>
                  <% } %>
              </div>
            </div>
            <div class="row">
                <div class="col-lg-12 col-xl-6">
                    <div class="card">
                      <div class="card-header">
                        <div class="card-head-row">
                          <div class="card-title">Details</div>
                          <div class="card-tools">
                            <ul class="nav nav-pills nav-secondary nav-pills-no-bd nav-sm" id="pills-tab" role="tablist">
                              <li class="nav-item submenu" role="presentation" data-bs-toggle="tooltip" data-bs-placement="top" data-bs-title="PR Classification">
                                <span class="nav-link active" id="pills-today" data-bs-toggle="pill" href="#pills-today" role="tab" aria-selected="false" tabindex="-1" aria-labelledby="pills-today"><%- transactions.pr_classification -%></span>
                              </li>
                              <% if(transactions?.banner_program) { %>
                              <li class="nav-item" role="presentation" data-bs-toggle="tooltip" data-bs-placement="top" data-bs-title="Banner Program">
                                <span class="nav-link" id="pills-week" data-bs-toggle="pill" href="#pills-week" role="tab" aria-selected="false" aria-labelledby="pills-week" tabindex="-1"><%- transactions.banner_program -%></span>
                              </li>
                              <% } %>
                              <% if(transactions?.bac_unit) { %>
                              <li class="nav-item submenu" role="presentation" data-bs-toggle="tooltip" data-bs-placement="top" data-bs-title="BAC Unit">
                                <span class="nav-link" id="pills-month" data-bs-toggle="pill" href="#pills-month" role="tab" aria-selected="false" tabindex="-1" aria-labelledby="pills-month"><%- transactions.bac_unit -%></span>
                              </li>
                              <% } %>
                            </ul>
                          </div>
                        </div>
                      </div>
                      <div class="card-body">
                        <div class="d-flex">
                          <div class="col-md-6 d-flex">
                            <div class="avatar">
                              <span class="avatar-title rounded-circle border border-white bg-secondary"><i class="fas fa-calendar-alt"></i></span>
                            </div>
                            <div class="flex-1 ms-3 pt-1">
                              <h6 class="text-uppercase fw-bold mb-1">
                                
                                <span><%- moment(transactions.pr_date).format('LL') -%></span>
                              </h6>
                              <span class="text-muted">Created Date</span>
                            </div>
                            <div class="float-end pt-1">
                            </div>
                          </div>
                          <div class="col-md-6 d-flex">
                            <div class="avatar">
                              <span class="avatar-title rounded-circle border border-white bg-secondary">
                                <i class="fas fa-user-circle"></i>
                              </span>
                            </div>
                            <div class="flex-1 ms-3 pt-1">
                              <h6 class="text-uppercase fw-bold mb-1"><%= transactions.requisitioner %></h6>
                              <span class="text-muted">Requisitioner</span>
                            </div>
                            <div class="float-end pt-1 hidden"></div>
                          </div>
                          <div class="hidden col-md-6 d-flex">
                             <div class="avatar">
                              <span class="avatar-title rounded-circle border border-white bg-info">
                                <i class="fas fa-user-gear"></i>
                              </span>
                            </div>
                            <div class="flex-1 ms-3 pt-1">
                              <h6 class="text-uppercase fw-bold mb-1"></h6>
                              <span class="text-muted">Managed by: </span>
                            </div>
                          </div>
                        </div>
                        <div class="separator-dashed"></div>
                        <div class="d-flex">
                          <div class="col-md-12 d-flex abc">
                            <div class="avatar">
                              <span class="avatar-title rounded-circle border border-white bg-info">â‚±</span>
                            </div>
                            <div class="flex-1 ms-3 pt-1">
                              <h6 class="text-uppercase fw-bold mb-1">
                                <%
                                  var {approved_budget : budget, fund_source} = transactions 
                                  var cleanBudget = budget.replace(/,/g, '');
  
                                  budget = parseFloat(cleanBudget)
                                  fund_source = JSON.parse(fund_source)
                                  
                                  var result = 'N/A'
                                  if(Array.isArray(fund_source)) {
                                    result = fund_source.map(item => `${item.division}-${item.section}`).join(', ');
                                  }
                                %>

                                <%- peso(budget) -%>
                                <span  class="text-warning ps-3" data-bs-toggle="tooltip" data-bs-placement="top" data-bs-title="Fund Source">
                                  <%- result -%>
                                </span>
                              </h6>
                              <span class="text-muted">Approved Budget of the Contract</span>
                            </div>
                            <div class="float-end pt-1">
                              <small class="text-muted"></small>
                            </div>
                          </div>
                        </div>
                        <div class="separator-dashed hidden"></div>
                        <div class="d-flex hidden">
                          <div class="avatar">
                            <span class="avatar-title rounded-circle border border-white bg-secondary"><i class="fas fa-hashtag"></i></span>
                          </div>
                          <div class="flex-1 ms-3 pt-1">
                            <h6 class="text-uppercase fw-bold mb-1">
                            <% if(transactions?.trans_code && isValidJSON(transactions.trans_code)) { 
                              trans_code = JSON.parse(transactions.trans_code)
                              trans_code.forEach(function(code){ if(code) { %>
                              <span class="badge badge-count"><%= code %></span>
                              <% } })%>
                            <% } else { %>
                              <span class="badge badge-count"><%= transactions?.trans_code %></span>
                            <% } %>
                            </h6>
                            <span class="text-muted">Purchase Request Number</span>
                          </div>
                          <div class="float-end pt-1">
                            <button  data-bs-toggle="modal" data-bs-target="#codeModal" id="addTransactionCodes" class="btn btn-icon btn-link op-8 me-1">
                              <i class="fas fa-plus-circle" data-bs-toggle="tooltip" data-bs-placement="top" data-bs-title="Add PR Number"></i>
                            </button>
                          </div>
                        </div>
                      </div>
                    </div>
                    <div class="card hidden">
                      <div class="card-header">
                        <div class="card-head-row">
                          <div class="card-title">Purchase Order History</div>
                          <div class="card-tools"></div>
                        </div>
                      </div>
                      <div class="card-body">
                        <div class="d-flex">
                          <div class="avatar">
                            <span class="avatar-title rounded-circle border border-white bg-secondary"><i class="fas fa-truck"></i></span>
                          </div>
                          <div class="flex-1 ms-3 pt-1">
                            <h6 class="text-uppercase fw-bold mb-1"></h6>
                            <span class="text-muted">Purchase Order Number</span>
                          </div>
                          <div class="float-end pt-1">
                            <button  data-bs-toggle="modal" data-bs-target="#purchaseOrderNumberModal" id="" class="btn btn-icon btn-link op-8 me-1">
                              <i class="fas fa-plus-circle" data-bs-toggle="tooltip" data-bs-placement="top" data-bs-title="Add PO Number"></i>
                            </button>
                          </div>
                        </div>
                      </div>
                    </div>
                    <!-- SHOW ONLY WHEN THE CURRENT STAGE IS [quotation_form_preparation, canvassing, supplier_engagement, bac_evaluation, procurement_finalization] -->
                    <% 
                      const stageCanvassing = steps[0]?.steps_number >= 6 && steps[0]?.steps_number <= 10
            
                      if (stageCanvassing) { 
                        let haveSuppliers = false;

                        if (_suppliers && _suppliers.length > 0) {
                          haveSuppliers = true;
                        }
                      %>
                      
                    <div class="card">
                      <div class="card-header">
                        <div class="card-head-row card-tools-still-right">
                            <h4 class="card-title">Suppliers</h4>
                            <div class="card-tools transcations-code text-uppercase form-group-add">
                                <button id="addButton" class="btn btn-icon btn-link btn-primary btn-xs">
                                  <span class="fa fa-plus"></span>
                                </button>
                            </div>
                        </div>
                      </div>
                      <div class="card-body">
                        <div id="supplierInfo" data-suppliers="<%= JSON.parse(_suppliers) %>">
                          <% 
                          const lists = JSON.parse(_suppliers) 

                            if (lists && lists.length > 0) { %>
                            <% lists.forEach( (supplier, index) => { 
                              const { supplier_id, quoted_price } = supplier
                              const formattedPrice = n => new Intl.NumberFormat('en-US').format(n);
                              // if(index === 0) return; // skip the first one as it's already rendered above
                            %>
                            <div id="supplier_<%= index %>" class="row" data-id="<%= index %>" data-supplier-id="<%= supplier_id %>" data-transaction-id="<%= product_id %>">
                              <div class="col-md-1 col-xs-1 pd-0" style="padding-right: 0;">
                                  <div class="form-group form-group-default form-group-minus">
                                      <label for="minusButton_<%= index %>">Rmv</label>
                                      <button id="minusButton_<%= index %>" class="form-control fas fa-minus-circle"></button>
                                  </div>
                              </div>
                              <div class="col-md-8 ml-0">
                                  <%- include('../../views/partials/selectSuppliers', { key: index, filtered: supplier_id }) %>
                              </div>
                              <div class="col-md-3">
                                <div class="form-group form-group-default">
                                  <label for="quoted_price<%= index %>">Quoted Price</label>
                                  <div class="input-icon" data-value="<%= formattedPrice(quoted_price) %>">
                                    <input id="quoted_price<%= index %>" name="quoted_price" data-type="number" type="text" class="form-control" value="<%= formattedPrice(quoted_price) %>">
                                  </div>
                                </div>
                              </div>
                            </div>
                          <% }) } else { %>
                            <% const key = 0 %>
                            <div id="supplier_<%= key %>" class="row" data-id="<%= key %>">
                              <div class="col-md-1 col-xs-1 pd-0" style="padding-right: 0;">
                                  <div class="form-group form-group-default form-group-minus">
                                      <label for="minusButton_<%= key %>">Rmv</label>
                                      <button id="minusButton_<%= key %>" class="form-control fas fa-minus-circle"></button>
                                  </div>
                              </div>
                              <div class="col-md-8 ml-0">
                                  <%- include('../../views/partials/selectSuppliers', { key, filtered: '' }) %>
                              </div>
                              <div class="col-md-3">
                                <div class="form-group form-group-default">
                                  <label for="qouted_price_<%= key %>">Qouted Price</label>
                                  <div class="input-icon">
                                    <input id="qouted_price_<%= key %>" name="qouted_price" data-type="number" type="text" class="form-control" value="">
                                  </div>
                                </div>
                              </div>
                            </div>
                          <% } %>
                        </div>
                      </div>
                      <div class="card-action align-right" style="padding: 15px 30px;">
                        <% if (haveSuppliers) { %>
                        <button id="submitSupplier" class="btn btn-success">Submit</button>
                        <% } else { %>
                        <button id="updateSupplier" class="btn btn-warning">Update</button>
                        <% } %>
                      </div>
                    </div>
                    <% } %>
                  </div>
                <div class="col-lg-12 col-xl-6">
                  <div class="card">
                    <div class="card-header">
                      <div class="card-head-row card-tools-still-right">
                        <div class="card-title">Next Responsible Person</div>
                        <% if(employeesInSameDivision && Array.isArray(employeesInSameDivision)) { %>
                        <button class="btn btn-warning btn-round ms-auto" id="assignedToBtn">
                          <i class="fa fa-forward"></i>
                          Assigned To
                        </button>
                        <% } %>
                      </div>
                    </div>
                    <div class="card-body" data-holder="<%= currentHolder %>" data-holder-division="">
                      <% if(employeesInSameDivision && Array.isArray(employeesInSameDivision)) { %>
                      <select class="form-select" id="nextResponsible" name="nextResponsible">
                        <option value="">Select next responsible person</option>
                        <%
                          employeesInSameDivision.forEach( employee => {
                            const { employeeid, firstname, lastname, middle } = employee
                        %>
                        <option value="<%= employeeid %>"><%= [firstname, lastname].join(' ')%></option>
                        <%  }) %>
                      </select>
                      <% } else { %>
                        <p class="text-muted">*** Please assign it to yourself so you can <strong>able to set the next responsible person</strong> for the transaction.</p>
                      <% } %>
                    </div>
                  </div>
                  <div class="card">
                    <div class="card-header">
                      <div class="card-head-row card-tools-still-right">
                        <div class="card-title">Recent Activity</div>
                        <div class="card-tools">
                          <button id="refreshActivity" class="btn btn-icon btn-link btn-primary btn-xs btn-refresh-card" data-transid="<%- transactions.product_id -%>" data-bs-toggle="tooltip" data-bs-placement="top" data-bs-title="Refresh">
                            <span class="fa fa-sync-alt"></span>
                          </button>
                        </div>
                      </div>
                    </div>
                    <div class="card-body">
                      <ol class="activity-feed mb-0" data-current-steps="<%= steps[0]?.steps_number %>">
                        <% var {approved_budget : budget} = transactions  %>
                        <%- include('../views/partials/activity-feed', { budget, approval_steps }) -%>
                      </ol>
                    </div>
                  </div>
                </div>
            </div>
          </div>
      </div>
      
    </div>
</div>

