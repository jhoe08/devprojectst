<!-- Header Template -->
<%- include('../../views/header') -%>

<div class="wrapper">
    <%- include('../../views/sidebar') -%>

    <div class="main-panel">
      <%- include('../../views/main-header') -%>

      <div class="container" >
          <div class="page-inner">
            <div class="d-flex align-items-left align-items-md-center flex-column flex-md-row pt-2 pb-4">
              <div>
                  <h3 class="fw-bold mb-3"><%- title -%></h3>
                  <h6 class="op-7 mb-2">List of request like Purchase Request, Travel Order, and etc...</h6>
              </div>
              <div class="ms-md-auto py-2 py-md-0">
                <a id="manageBtn" href="#" class="btn btn-label-info btn-round me-2" data-component="transactions" data-column="11">Manage</a>
                <a href="/transactions/new" class="btn btn-primary btn-round"><i class="fas fa-plus"></i> Add New</a>
              </div>
            </div>
            <div class="row">
                <div class="col-md-12">
                    <div class="card">
                      <div class="card-header">
                        <div class="card-head-row card-tools-still-right">
                          <div class="card-title">List of <%=title%></div>
                          <div class="card-tools">
                            <button id="refreshTransactions" class="btn btn-icon btn-link btn-primary btn-xs btn-refresh-card" data-component="transactions">
                              <span class="fa fa-sync-alt"></span>
                            </button>
                          </div>
                        </div>
                      </div>
                      <div class="card-body">
                        <div class="table-responsive">
                          <table
                            id="transactions-datatables"
                            class="display table table-striped table-hover"
                          >
                            <thead>
                              <tr class="text-uppercase">
                                <th>ID</th>
                                <th>Notice Title</th>
                                <th>Requistioner</th>
                                <th>Division</th>
                                <th>Date</th>
                                <th>ABC</th>
                                <th>Fund Sources</th>
                                <th>Codes</th>
                                <th>Banner</th>
                                <th>Classification</th>
                                <th>Unit</th>
                                <th><%= hasAllowedRole(['Admin']) ? 'Funds Availability' : 'Action' %></th>
                                <th>Steps</th>
                              </tr>
                            </thead>
                            <tfoot>
                              <tr class="text-uppercase">
                                <th>ID</th>
                                <th>Notice Title</th>
                                <th>Requistioner</th>
                                <th>Division</th>
                                <th>Date</th>
                                <th>ABC</th>
                                <th>Fund Sources</th>
                                <th>Codes</th>
                                <th>Banner</th>
                                <th>Classification</th>
                                <th>Unit</th>
                                <th><%= hasAllowedRole(['Admin']) ? 'Funds Availability' : 'Action' %></th>
                                <th>Steps</th>
                              </tr>
                            </tfoot>
                            <tbody>

                              <% 
                                let { division:userDivision, section: userSection, position: userPosition } = SESSION_USER_LOG.designation
                                userDivision = userDivision.toLowerCase();
                                userSection = userSection.toLowerCase();
                                userPosition = userPosition.toLowerCase();

                                for(var i=0; i < transactions.length; i++) { 
                                  var {pr_date, approved_budget, product_id, pr_classification, banner_program, bid_notice_title, requisitioner, division, fund_source, bac_unit, trans_code, prepared_by } = transactions[i]

                                  

                                  date = moment(pr_date).format('L')
                                 
                                  var budget = approved_budget
                                  var cleanBudget = budget.replace(/,/g, '');

                                  budget = parseFloat(cleanBudget)
                                  fund_source = JSON.parse(fund_source)
                                  fund_source = (Object.keys(fund_source).length === 0) ? '-' : fund_source.map(item => `${item.division}-${item.section}`).join(', ');

                                  const { lists, getCurrentStep, getDetails, getTitle } = STEPS


                                  let current_step = getCurrentStep(steps, product_id)
                                  const current_step_number = parseInt(current_step?.steps_number, 10) || 1;
                                  current_step_title = getTitle(current_step_number)

                              %>
                               
                                <tr 
                                  data-steps="<%= JSON.stringify(current_step) %>" 
                                  data-current-steps="<%= current_step_number %>" 
                                  data-step-title="<%= current_step_title %>"
                                  data-index="<%= i %>"
                                  data-user-chief="<%= '' %>"
                                  data-user-division="<%= userDivision %>"
                                  data-user-section="<%= userSection %>"
                                  >
                                  
                                  <td data-head="Product ID"><%= product_id %></td>
                                  <td data-head="Notice Title">
                                    <%= bid_notice_title %>
                                    <%- include('../../views/partials/progress', {length: 30, progress: current_step_number, title: current_step_title }) %>
                                  </td>
                                  <td data-head="Requistioner"><%= requisitioner %></td>
                                  <td data-head="Division"><%= division %></td>
                                  <td data-head="PR Date" data-value="<%= moment(pr_date).format('Do MMM YYYY') %>" data-order="<%= moment(pr_date).unix(); %>"><%= date %></td>
                                  <td data-head="Budget" data-budget="<%= budget %>" data-typeOf="<%= typeof budget %>" class="align-right"><%= budget %></td>
                                  <td data-head="Fund Sources"><%- fund_source -%></td>
                                  <td data-head="Codes"><%- trans_code -%></td>
                                  <td data-head="Banner"><%= banner_program %></td>
                                  <td data-head="Classification"><%= pr_classification %></th>
                                  <td data-head="BAC"><%= bac_unit %></td>
                                  <td data-head="Actions">
                                    <div class="form-button-action" data-transid="<%= product_id %>" data-transaction="<%= JSON.stringify(transactions[i]) %>">
                                      <span data-bs-toggle="tooltip" title="View Transactions">
                                        <a href="/transactions/<%= product_id %>/view" data-transid="<%= product_id %>" type="button" class="btn btn-link btn-primary">
                                          <i class="fa fa-eye"></i>
                                        </a>
                                      </span>
                               
                                      <% if (userDivision=='admin' && userSection=='budget' && current_step_number===3) { %>
                                      <span data-bs-toggle="tooltip" title="Approve Fund Availability">
                                        <button data-product-id="<%= product_id %>" type="button" class="btn alert_confirm btn-link btn-success" data-original-title="Remove" id="alert_confirm" data-step="<%= current_step_number %>">
                                          <i class="fa fa-check"></i>
                                        </button>
                                      </span>
                                      <span data-bs-toggle="tooltip" title="Disapprove Fund Availability">
                                        <button data-product-id="<%= product_id %>" type="button" data-bs-toggle="tooltip" title="" class="btn alert_deny btn-link btn-danger" data-original-title="Remove"  id="alert_deny" data-step="<%= current_step_number %>">
                                          <i class="fa fa-times"></i>
                                        </button>
                                      </span>
                                      <% } %>
                                      <% if (userDivision=='admin' && userSection=='gs' && current_step_number===4) { %>
                                      <button data-product-id="<%= product_id %>" type="button" data-bs-toggle="tooltip" title="" class="btn alert_confirm confirm_app btn-link btn-success" data-original-title="Remove"  id="alert_confirm" data-bs-toggle="tooltip" data-bs-placement="top" data-bs-title="Verify APP">
                                        <i class="fa fa-check-circle"></i>
                                      </button>
                                        <% if (cleanBudget < 50000) { %>
                                      <button data-product-id="<%= product_id %>" type="button" data-bs-toggle="tooltip" title="" class="btn alert_deny btn-link btn-info" data-original-title="Remove"  id="alert_deny" data-bs-toggle="tooltip" data-bs-placement="top" data-bs-title="Generate Canvass Form">
                                        <i class="fa fa-folder-open"></i>
                                      </button>
                                        <% } else { %>
                                      <button data-product-id="<%= product_id %>" type="button" data-bs-toggle="tooltip" title="" class="btn alert_deny btn-link btn-info" data-original-title="Remove"  id="alert_deny" data-bs-toggle="tooltip" data-bs-placement="top" data-bs-title="Philgesh Posting">
                                        <i class="fa fa-globe"></i>
                                      </button>
                                        <% } %>
                                      <% } %>
                                      <% if(isCreatorOfTransaction(transactions[i])) { %>
                                      <span data-bs-toggle="tooltip" title="Edit Transaction">
                                      <a href="/transactions/<%= product_id %>/edit" data-transid="<%= product_id %>" type="button"  class="btn btn-link btn-primary" data-original-title="Edit Transaction" data-bs-toggle="tooltip" data-bs-placement="top" data-title="Edit Transaction">
                                        <i class="fa fa-edit"></i>
                                      </a>
                                      </span>
                                      <% } %>
                                      <% if (hasAllowedRole(['user'])) { %>
                                      <button data-href="/transactions/<%= product_id %>/print" type="button" data-bs-toggle="tooltip" title="" class="btn btn-link btn-warning" data-original-title="Print"  id="print_<%= product_id %>">
                                        <i class="fas fa-print"></i>
                                      </button>
                                       <% } %>
                                      <% if (hasAllowedRole(['SuperAdmin'])) { %>
                                      <button data-transid="<%= product_id %>" type="button" data-bs-toggle="tooltip" title="" class="btn btn-delete btn-link btn-danger" data-original-title="Remove"  id="alert_demo_<%= product_id %>">
                                        <i class="fa fa-trash"></i>
                                      </button>
                                      <% } %>
                                      
                                    </div>
                                  </td>
                                  <td data-head="Steps">
                                    <%= current_step %>
                                  </td>
                                </tr>
                              <% } %>
                             </tbody>
                          </table>
                        </div>
                      </div>
                    </div>
                  </div>
            </div>
          </div>
      </div>

    </div>
    <%# include('../../views/settings') #%>
</div>
<!-- Transaction Modal: View -->
<%- include('../../components/modals/transactions/view') -%>
<!-- Transaction Modal: New -->
<%- include('../../components/modals/transactions/add') -%>

