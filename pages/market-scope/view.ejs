<% 
  const { id:referenceNumber, project_title, reference_number, date_conducted, end_user_unit, consultations_with_suppliers, participation_in_summits, review_reports, review_brochures, price_sourcing, use_philgeps_data, other_activity, documentation, prepared_by_name, prepared_by_position, prepared_by_date, prepared_by_signature, reviewed_by_name, reviewed_by_position, reviewed_by_date, reviewed_by_signature } = results 

  const { market_scopes } = SUMMARY
  const { row_count:total_market_scopes } = JSON.parse(market_scopes)

%>
  
<div class="row mt--2">
  <div class="col-12 col-sm-6 col-md-6 col-xl-6">
    <div class="card">
      <div class="card-body">
        <div class="d-flex justify-content-between">
          <div>
            <h5><b><%= project_title %></b></h5>
            <p class="text-muted"><%= date_conducted || 'Not yet conducted' %></p>
          </div>
          <h3 class="text-info fw-bold"><%= reference_number %></h3>
        </div>
        <div class="progress progress-sm">
          <div class="progress-bar bg-info w-75" role="progressbar" aria-valuenow="75" aria-valuemin="0" aria-valuemax="<%= total_market_scopes %>"></div>
        </div>
        <div class="d-flex justify-content-between mt-2">
          <p class="text-muted mb-0"><%= reference_number %> out of <%= total_market_scopes %></p>
          <p class="text-muted mb-0">100%</p>
        </div>
      </div>
    </div>
  </div>
  <div class="col-12 col-sm-6 col-md-6 col-xl-3">
    <div class="card">
      <div class="card-body">
        <div class="d-flex justify-content-between">
          <div>
            <h5><b><%= prepared_by_name %></b></h5>
            <p class="text-muted"><%= prepared_by_position %></p>
          </div>
          <h3 class="text-danger fw-bold">15</h3>
        </div>
        <div class="progress progress-sm">
          <div class="progress-bar bg-danger w-50" role="progressbar" aria-valuenow="50" aria-valuemin="0" aria-valuemax="100"></div>
        </div>
        <div class="d-flex justify-content-between mt-2">
          <p class="text-muted mb-0">Prepared by</p>
          <p class="text-muted mb-0">50%</p>
        </div>
      </div>
    </div>
  </div>
  <div class="col-12 col-sm-6 col-md-6 col-xl-3">
    <div class="card">
      <div class="card-body">
        <div class="d-flex justify-content-between">
          <div>
            <h5><b><%= reviewed_by_name %></b></h5>
            <p class="text-muted"><%= reviewed_by_position %></p>
          </div>
          <h3 class="text-secondary fw-bold">12</h3>
        </div>
        <div class="progress progress-sm">
          <div class="progress-bar bg-secondary w-25" role="progressbar" aria-valuenow="25" aria-valuemin="0" aria-valuemax="100"></div>
        </div>
        <div class="d-flex justify-content-between mt-2">
          <p class="text-muted mb-0">Reviewed by</p>
          <p class="text-muted mb-0">25%</p>
        </div>
      </div>
    </div>
  </div>
</div>

<div class="row">
  <div class="col-md-12">
    <div class="card">
      <div class="card-header">
        <div class="d-flex align-items-center">
          <h4 class="card-title">List of Purchase Request</h4>
          <a class="btn btn-primary btn-round ms-auto" href="/transactions/new?market-scope=<%= referenceNumber %>">
            <i class="fa fa-plus"></i>
            Add New PR
          </a>
        </div>
      </div>
      <div class="card-body">
         <%- 
            include('../../components/datatables/tables', { 
              tableId: "transactions-datatables", 
              thead: [
                  "product_id",
                  "trans_id",
                  "trans_code",
                  "pr_date",
                  "approved_budget",
                  "pr_classification",
                  "requisitioner",
                  "prepared_by",
                  "division",
                  "banner_program",
                  "fund_source",
                  "bac_unit",
                  "bid_notice_title",
                  "remarks"
              ],
              tbody: datatables, 
              hideColumns: [] 
            }) 
          -%>
      </div>
    </div>
  </div>
</div>