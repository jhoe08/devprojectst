<!-- Header Template -->
<%- include('../views/header') -%>

<div class="wrapper">
    <%- include('../views/sidebar') -%>

    <div class="main-panel">
      <%- include('../views/main-header') -%>
      
      <div class="container" >
          <div class="page-inner">
            <div class="d-flex align-items-left align-items-md-center flex-column flex-md-row pt-2 pb-4">
              <div>
                  <h3 class="fw-bold mb-3"><%- title -%></h3>
                  <h6 class="op-7 mb-2"></h6>
              </div>
              <div class="ms-md-auto py-2 py-md-0">
                  <a href="#" class="btn btn-label-info btn-round me-2">Manage</a>
                  <a id="createTransactions" href="#" class="btn btn-primary btn-round"><i class="fas fa-save"></i> Create</a>
              </div>
            </div>
            <form id="createTransactionForm" method="post"></form>
              <div class="row">
                <div class="col-md-6">
                  <div class="form-group">
                    <label for="bidNoticeTitle">Bid Notice Title</label>
                    <textarea id="bidNoticeTitle" name="bidNoticeTitle" class="form-control" rows="3"></textarea>
                  </div>
                  <div class="form-group">
                    <label for="prClassification">Classification</label>  
                    <% var classification = predata.classification %>
                    <select id="prClassification" name="prClassification" class="form-select form-control">
                      <% for(var i=0; i < classification.length; i++) { %>
                      <option value="<%= classification[i] %>"><%= classification[i] %></option>
                      <% } %>
                    </select>
                  </div>
                  <div class="form-group">
                    <label for="requisitioner">Requisitioner</label>
                    <div class="input-icon">
                      <input id="requisitioner" name="requisitioner" type="text" class="form-control" placeholder="Search for...">
                      <span class="input-icon-addon">
                        <i class="fa fa-search"></i>
                      </span>
                    </div>
                  </div>
                  <div class="form-group">
                    <label for="division">Division</label>
                    <div class="input-icon">
                      <input id="division" name="division" type="text" class="form-control" placeholder="">
                    </div>
                  </div>
                </div>
                <div class="col-md-6">
                  <div class="form-group">
                    <label for="budget">Budget</label>
                    <div class="input-group mb-3">
                      <span class="input-group-text">â‚±</span>
                      <input id="budget" name="budget" type="number" class="form-control" aria-label="Amount (to the nearest dollar)">
                    </div>
                  </div>
                  <div class="form-group">
                    <label for="fundSource">Fund Source</label>
                    <div class="input-group mb-3">
                      <input id="fundSource" name="fundSource" class="form-control" aria-label="Amount (to the nearest dollar)">
                    </div>
                  </div>
                  <div class="form-group">
                    <label for="bannerProgram">Banner Program</label>  
                    <% var bannerProgram = predata.banner_program %>
                    <select id="bannerProgram" name="bannerProgram" class="form-select form-control">
                      <% for(var i=0; i < bannerProgram.length; i++) { %>
                      <option value="<%= bannerProgram[i] %>"><%= bannerProgram[i] %></option>
                      <% } %>
                    </select>
                  </div>
                  <div class="form-group">
                    <label for="bacUnit">BAC Unit</label>  
                    <% var bacUnit = predata.bac_unit %>
                    <select id="bacUnit" name="bacUnit" class="form-select form-control">
                      <% for(var i=0; i < bacUnit.length; i++) { %>
                      <option value="<%= bacUnit[i] %>"><%= bacUnit[i] %></option>
                      <% } %>
                    </select>
                  </div>
                  <div class="form-group">
                    <label for="remarks">Remarks</label>
                    <textarea id="remarks" name="remarks" class="form-control" rows="3"></textarea>
                  </div>
                </div>
              </form>
            </div>
          </div>
      </div>

    </div>

    <%- include('../views/settings') -%>
</div>



<!-- Footer Template -->
<%- include('../views/footer.html') -%>