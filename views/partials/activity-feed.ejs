<% reversedSteps.forEach(function(step) { 
  if (step.id != 1 && steps.length > 0) {

    const step_id = step.id

    const current = steps[0]?.steps_number
    const max = 30

    const count_steps = [];

    for (let i = current + 1; i <= max; i++) {
      count_steps.push(i);
      if (i === 7) count_steps.push(7.1); // insert custom step after 7
    }

    const hide = count_steps

    function getStepsDetails(steps, stepNumber) {
      return steps.find(step => 
        step.steps_number === stepNumber
      );
    }


    const stepsDetails = getStepsDetails(steps, step_id)

    const isHidden = hide.includes(step.id) ? 'hidden' : ''
    const status = (stepsDetails?.status == 'approved') ? 'success' : (stepsDetails?.status == 'return') ? 'danger' : 'warning'
    const title  = (stepsDetails?.status == 'approved') ? 'Next Approver' : (stepsDetails?.status == 'return') ? 'Return to End-User' : 'Waiting for Approval'
    
%>

  <li data-step="<%= JSON.stringify(getStepsDetails(steps, step_id)) %>" class="feed-item feed-item-black d-flex justify-content-between <%= isHidden %>" data-id="" data-bs-toggle="tooltip" data-bs-placement="left" data-bs-title="<%= title %>">
  <div class="d-flex">
    <span class="user fs-3 mr-3"><i class="fas fa-door-open"></i></span>
    <div class="">
      <time class="date" datetime="<%- moment(transactions.pr_date).format(format) %>">
        <%- moment(stepsDetails?.updated_at).format(format) %>
      </time>
