
<%
  const notifs = JSON.parse(NOTIFICATIONS)
  const countNotif = notifs ? notifs.length : 0
%>

  <li class="nav-item topbar-icon dropdown hidden-caret">
    <a
      class="nav-link dropdown-toggle"
      href="#"
      id="notifDropdown"
      role="button"
      data-bs-toggle="dropdown"
      aria-haspopup="true"
      aria-expanded="false"
    >
      <i class="fa fa-bell"></i>
      <span class="notification countNotif"><%= countNotif %></span>
    </a>
    <ul
      class="dropdown-menu notif-box animated fadeIn"
      aria-labelledby="notifDropdown"
    >
    <!-- NOTIFICATIONS -->
    
      <li class="">
        <div class="dropdown-title">
          You have <span class="countNotif"><%= countNotif %></span> new notification
        </div>
      </li>
      <li>
        <div class="notif-scroll scrollbar-outer">
          <div class="notif-center">
          <% 
            notifs.forEach(notif=>{ 
              const {id, message, link, component, created_at, updated_at} = notif
              let path = `/${component}/${link}`;
              const date = moment(created_at).fromNow()
              let icon, color, query= ''
              switch(component){
                case 'transactions': 
                  icon = 'file'
                  color = 'success'
                  path += '/view'
                break;
                case 'employees': 
                  icon = 'user'
                  color = 'warning'
                  query = ''
                break;
                case 'remarks':
                  path = `/transactions/${link}/view`
                  color = 'info'
                  icon = 'comment'
                break;
              }
          %>
            <a href="<%=path%>" class="">
              <div class="notif-icon notif-<%=color%>">
                <i class="fa fa-<%=icon%>"></i>
              </div>
              <div class="notif-content">
                <span class="block"> <%=message%> </span>
                <span class="time" data-created="<%-created_at%>"><%=date%></span>
              </div>
            </a>
          <% }) %>
            <a href="#" class="hidden">
              <div class="notif-icon notif-success">
                <i class="fa fa-comment"></i>
              </div>
              <div class="notif-content">
                <span class="block">
                  Rahmad commented on Admin
                </span>
                <span class="time">12 minutes ago</span>
              </div>
            </a>
            <a href="#" class="hidden">
              <div class="notif-img">
                <img
                  src="/assets/img/profile2.jpg"
                  alt="Img Profile"
                />
              </div>
              <div class="notif-content">
                <span class="block">
                  Reza send messages to you
                </span>
                <span class="time">12 minutes ago</span>
              </div>
            </a>
            <a href="#" class="hidden">
              <div class="notif-icon notif-danger">
                <i class="fa fa-heart"></i>
              </div>
              <div class="notif-content">
                <span class="block"> Farrah liked Admin </span>
                <span class="time">17 minutes ago</span>
              </div>
            </a>
          </div>
        </div>
      </li>
      <li>
        <a class="see-all" href="javascript:void(0);"
          >See all notifications<i class="fa fa-angle-right"></i>
        </a>
      </li>
    </ul>
  </li>