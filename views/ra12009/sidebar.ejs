  <%
    const {transactions, totalTransactions, employees, market_scopes} = SUMMARY
    const { row_count:total_transactions } = JSON.parse(transactions)
    const { row_count:total_employees } = JSON.parse(employees)
    const { row_count:total_market_scopes } = JSON.parse(market_scopes)
  %>
  <!-- Sidebar -->
  <div class="sidebar" data-background-color="white">
    <div class="sidebar-logo">
      <!-- Logo Header -->
      <div class="logo-header" data-background-color="green2">
        <a href="/" class="logo">
          <img
            src="/assets/img/da-logo-circle.png"
            alt="navbar brand"
            class="navbar-brand mr-3"
            height="20"
          />
          D.A RFO7
        </a>
        <div class="nav-toggle">
          <button class="btn btn-toggle toggle-sidebar">
            <i class="gg-menu-right"></i>
          </button>
          <button class="btn btn-toggle sidenav-toggler">
            <i class="gg-menu-left"></i>
          </button>
        </div>
        <button class="topbar-toggler more">
          <i class="gg-more-vertical-alt"></i>
        </button>
      </div>
      <!-- End Logo Header -->
    </div>
    <div class="sidebar-wrapper scrollbar scrollbar-inner">
      <div class="sidebar-content">
        <ul class="nav nav-secondary" data-current-url="<%- path -%>">
          <li class="nav-item <%= UTILS.isActive(currentPath, '/') %>">
            <a
              href="/"
              aria-expanded="false"
            >
              <i class="fas fa-home"></i>
              <p>Dashboard</p>
            </a>
          </li>
          <li class="nav-item">
            <a data-bs-toggle="collapse" href="#market-scope">
              <i class="fas fa-compass"></i>
              <p>Market Scope</p>
              <span class="caret"></span>
            </a>
            <div class="collapse" id="market-scope">
              <ul class="nav nav-collapse">
                <li>
                  <a href="/market-scope">
                    <span class="sub-item">Lists <span class="badge badge-secondary pull-right"><%= total_market_scopes %></span></span>
                  </a>
                </li>
                <li>
                  <a href="/market-scope/new">
                    <span class="sub-item">Add New</span>
                  </a>
                </li>
                <li>
                  <a href="/404">
                    <span class="sub-item">Analytics </span>
                  </a>
                </li>
              </ul>
            </div>
          </li>
          <% if(!isGuest()) { %>
          <li class="nav-item <%= UTILS.isActive(currentPath, '/qrscanner') %>">
            <a
              href="/qrscanner"
              aria-expanded="false"
            >
              <i class="fas fa-qrcode"></i>
              <p>Scan QR Code</p>
            </a>
          </li>
          <% } %>
          <li class="nav-section">
            <span class="sidebar-mini-icon">
              <i class="fa fa-ellipsis-h"></i>
            </span>
            <h4 class="text-section">Pages</h4>
          </li>
          <% if (userAvailComponents('Transactions') ) { %>
          <li class="nav-item <%= UTILS.isActive(currentPath, '/transactions') %>">
            <a href="/transactions">
              <i class="fas fa-file"></i>
              <p>Transactions <span class="badge badge-secondary pull-right"><%= totalTransactions %></span></p>
              <!-- <span class="caret"></span> -->
            </a>
          </li> 
          <li class="nav-section" <%=userAvailComponents('Transactions')%>>
            <span class="sidebar-mini-icon">
              <i class="fa fa-ellipsis-h"></i>
            </span>
            <h4 class="text-section">Suppliers</h4>
          </li>
          <li class="nav-item <%= UTILS.isActive(currentPath, '/suppliers') %>">
            <a href="/suppliers">
              <i class="fas fa-truck"></i>
              <p>Lists</p>
              <!-- <span class="caret"></span> -->
            </a>
          </li>
          <li class="hidden nav-item <%= UTILS.isActive(currentPath, '/transactions/scan') %>">
            <a href="/transactions/scan">
              <i class="fas fa-qrcode"></i>
              <p>Scan QRCode</p>
              <!-- <span class="caret"></span> -->
            </a>
          </li>
          <% } %>
          <% if (userAvailComponents('Employees') ) { %>
          <li class="nav-section">
            <span class="sidebar-mini-icon">
              <i class="fa fa-ellipsis-h"></i>
            </span>
            <h4 class="text-section">Employees</h4>
          </li>
          <li class="nav-item <%= UTILS.isActive(currentPath, '/employees') %>">
            <a href="/employees">
              <i class="fas fa-user-friends"></i>
              <p>Lists <span class="badge badge-secondary pull-right"><%= total_employees %></span></p>
              <!-- <span class="caret"></span> -->
            </a>
          </li>
          <% if (ENVIRONMENT == 'testing') { %>
          <li class="nav-item <%= UTILS.isActive(currentPath, '/employees/new') %>">
            <a href="/employees/new">
              <i class="fas fa-user-plus"></i>
              <p>Add New</p>
              <!-- <span class="caret"></span> -->
            </a>
          </li>
          <% } %> 
          <% if(!hasAllowedRole(['Contributor', 'Viewer'])) { %>
          <li class="nav-item <%= UTILS.isActive(currentPath, '/employees/register') %>">
            <a href="/employees/register">
              <i class="fas fa-upload"></i>
              <p>Register</p>
              <!-- <span class="caret"></span> -->
            </a>
          </li>
          <% } %>
          <% } %> <!-- endof if (userAvailComponents('Transactions') -->
          
          <li class="nav-section hidden">
            <span class="sidebar-mini-icon">
              <i class="fa fa-ellipsis-h"></i>
            </span>
            <h4 class="text-section">Inventory</h4>
          </li>
          <li class="nav-item <%= UTILS.isActive(currentPath, '/inventory') %> hidden">
            <a href="/inventory">
              <i class="fas fa-warehouse"></i>
              <p>Dashboard</p>
              <!-- <span class="caret"></span> -->
            </a>
          </li>
          <% if(!isGuest() && (userAvailComponents('Documents') )) { %>
          <li class="nav-section">
            <span class="sidebar-mini-icon">
              <i class="fa fa-ellipsis-h"></i>
            </span>
            <h4 class="text-section">Documents</h4>
          </li>
          <li class="nav-item <%= UTILS.isActive(currentPath, '/media') %>">
            <a
              href="/media"
              aria-expanded="false"
            >
              <i class="fas fa-file-image"></i>
              <p>Media</p>
            </a>
          </li>
          <li class="nav-item <%= UTILS.isActive(currentPath, '/documents') %>">
            <a href="/documents">
              <i class="fas fa-copy"></i>
              <p>Lists</p>
              <!-- <span class="caret"></span> -->
            </a>
          </li>
          <% } %>
        </ul>
      </div>
    </div>
  </div>
  <!-- End Sidebar -->

  